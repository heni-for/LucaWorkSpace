{
  "manifest_version": 3,
  "name": "LUCA Course Importer",
  "version": "1.0.0",
  "description": "Import courses from Coursera, Udemy, YouTube, Moodle and more to LUCA Education Assistant",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:9002/*",
    "http://localhost:3000/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.coursera.org/*",
        "https://www.udemy.com/*",
        "https://www.youtube.com/*",
        "https://*.moodle.org/*",
        "https://*.edx.org/*",
        "https://www.khanacademy.org/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}

